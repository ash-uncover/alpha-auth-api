    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/node": "20.5.9",
    "eslint": "8.48.0",
    "eslint-plugin-import": "2.28.1",
    "jest": "29.6.4",
    "nodemon": "3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
